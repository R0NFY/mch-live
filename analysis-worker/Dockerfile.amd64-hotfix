FROM cr.yandex/crpv9gnnri1vqg1cof2b/analysis-worker@sha256:d3452589b42d3ad17aab0344806bd86ffdaa18a4a32a778bcb20a2f36b43903f

# The published image digest we pulled locally appears to be missing IPython,
# but OceanAI imports it internally in some codepaths.
# This hotfix layer is intentionally small to make local amd64 testing reliable.
ENV OCEANAI_CACHE_DIR=/app/oceanai-cache

RUN mkdir -p "${OCEANAI_CACHE_DIR}"
RUN pip install --no-cache-dir --retries 20 --timeout 600 ipython opensmile

